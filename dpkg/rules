#!/usr/bin/make -f
# debian/rules that uses debhelper >= 7.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS


%:
	dh  $@

install_libexe:
	# Set up libexe package directories and files
	mkdir -p debian/libexe/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.so.*.*.* debian/libexe/usr/lib

install_libexe_dev:
	# Set up libexe-dev package directories and files
	mkdir -p debian/libexe-dev/usr/include
	mkdir -p debian/libexe-dev/usr/include/libexe
	mkdir -p debian/libexe-dev/usr/lib
	mkdir -p debian/libexe-dev/usr/lib/pkgconfig
	mkdir -p debian/libexe-dev/usr/share/man/man3
	install -p -m755 debian/tmp/usr/include/*.h debian/libexe-dev/usr/include
	install -p -m755 debian/tmp/usr/include/libexe/*.h debian/libexe-dev/usr/include/libexe
	install -p -m755 debian/tmp/usr/lib/*.la debian/libexe-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.a debian/libexe-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.so debian/libexe-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/pkgconfig/* debian/libexe-dev/usr/lib/pkgconfig
	install -p -m755 debian/tmp/usr/share/man/man3/* debian/libexe-dev/usr/share/man/man3

install_libexe_tools:
	# Set up libexe-tools package directories and files
	mkdir -p debian/libexe-tools/usr/bin
	mkdir -p debian/libexe-tools/usr/share/man/man1
	install -p -m755 debian/tmp/usr/bin/* debian/libexe-tools/usr/bin
	install -p -m755 debian/tmp/usr/share/man/man1/* debian/libexe-tools/usr/share/man/man1

override_dh_auto_test:

override_dh_installinit: install_libexe install_libexe_dev install_libexe_tools

override_dh_installmenu:

override_dh_installmime:

override_dh_installmodules:

override_dh_installlogcheck:

override_dh_installlogrotate:

override_dh_installpam:

override_dh_installppp:

override_dh_installudev:

override_dh_installwm:

override_dh_installxfonts:

override_dh_gconf:

override_dh_icons:

override_dh_perl:

